<% include ../partials/header %>

<div class="wrapper">
    <div class="middle user">

        <h1>
            <%= user.username %>'s profile
        </h1>

        <h5>
            <%= user.email %>
        </h5>

        <h4>
            <%= user.firstName + " " + user.lastName %>
        </h4>

        <img src="<%= user.avatar %>" alt="user profile picture">

        <h3>
            Blog posts by <%= user.username %>
        </h3>

        <ul>
            
            <% shitshow.forEach(function(shitshow) { %>
            
            <li><a href="/shitshow/<%= shitshow.id %>"> <%= shitshow.name %> </a></li>
            
            <% }); %>

        </ul>
    </div>
</div>
<% include ../partials/footer %>